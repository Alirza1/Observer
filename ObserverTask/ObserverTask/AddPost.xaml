<Window x:Class="ObserverTask.AddPost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObserverTask"
        mc:Ignorable="d"
        Title="AddPost" Height="450" Width="800">
    <Grid>
        <Label FontSize="30" FontWeight="DemiBold">Title:</Label>
        <TextBox Height="50" FontSize="20" FontWeight="DemiBold" VerticalAlignment="Top" Margin="0,50,0,0" Name="title_txtb"></TextBox>
        <Image Height="200" Width="400" HorizontalAlignment="Left" Margin="100,0,0,0" Name="imagebox"></Image>
        <Button Click="load_thumbnail_Click" FontSize="20" FontWeight="DemiBold" Height="100" Width="200" Margin="575,0,0,115" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Red" BorderThickness="10" Name="load_thumbnail">Load Thumbnail</Button>
        <Button FontSize="36" FontWeight="DemiBold" Height="100" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Red" BorderThickness="10" Name="post_btn" Click="post_btn_Click">Post</Button>
    </Grid>
</Window>
